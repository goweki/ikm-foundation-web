{
  "name": "ikm-foundation-web",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "lint": "next lint",
    "dev": "NODE_OPTIONS='--network-family-autoselection-attempt-timeout=500' NODE_ENV=development next dev",
    "build": "NODE_ENV=production next build",
    "postbuild": "npm run copy-static",
    "copy-static": "cp -r public .next/standalone/ && cp -r .next/static .next/standalone/.next/",
    "start": "NODE_OPTIONS='--network-family-autoselection-attempt-timeout=500' NODE_ENV=production node server.js"
  },
  "dependencies": {
    "@headlessui/react": "^2.2.2",
    "@heroicons/react": "^2.2.0",
    "next": "15.3.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-paystack": "^6.0.0",
    "react-slick": "^0.30.3",
    "slick-carousel": "^1.8.1"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/react-slick": "^0.23.13",
    "eslint": "^9",
    "eslint-config-next": "15.3.1",
    "tailwindcss": "^4",
    "typescript": "^5"
  }
}
